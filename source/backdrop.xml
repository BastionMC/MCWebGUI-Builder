<?xml version="1.0" encoding="UTF-8"?>
<build>

<!-- Main -->
<rearrange>
    <file>backdrop_main.png</file>
    <non-repeating>
        <size>8,12</size>
        <move>
            0,0;4,4:0,0|
            8,0;4,4:4,0|
            0,8;4,4:0,4|
            8,8;4,4:4,4|

            4,4;4,4:0,8
        </move>
    </non-repeating>
    <vertically-repeating>
        <size>8,4</size>
        <move>
            0,4;4,4:0,0|
            8,4;4,4:4,0
        </move>
    </vertically-repeating>
    <horizontally-repeating>
        <size>4,8</size>
        <move>
            4,0;4,4:0,0|
            4,8;4,4:0,4
        </move>
    </horizontally-repeating>
    <result-file>backdrop/main</result-file>
</rearrange>

<!-- Simple -->
<rescale>
    <file>backdrop_simple.png</file>
    <size>4,4</size>
    <result-file>backdrop/simple</result-file>
</rescale>

<!-- Loading -->
<rescale>
    <file>backdrop_loading.png</file>
    <size>4,4</size>
    <result-file>backdrop/loading</result-file>
</rescale>

</build>