<?xml version="1.0" encoding="UTF-8"?>
<build>

<!-- Off -->
<rearrange>
    <file>switch_on.png</file>
    <non-repeating>
        <size>32,16</size>
        <move>
            0,0;32,16:0,0
        </move>
    </non-repeating>
    <result-file>switch/off</result-file>
</rearrange>

